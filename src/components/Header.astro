---
import { SITE_TITLE } from "../consts";
---

<script type="text/partytown">
  document.getElementById("toggleBtn").addEventListener("click", function () {
    document.getElementById("navbar-default").classList.toggle("hidden");
  });
</script>
<header class="mb-10">
  <nav class="bg-transparent">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <img src="/logo.png" class="h-8 w-8" alt="Nkauj Logo" />
        <span class="self-center text-2xl font-semibold whitespace-nowrap"
          >{SITE_TITLE}</span
        >
      </a>
      <button
        id="toggleBtn"
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-red-200"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col p-4 md:p-0 mt-4 border shadow-lg shadow-red-100 border-gray-100 rounded-lg bg-gray-50 md:shadow-none md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-transparent"
        >
          <li>
            <a
              href="/"
              class="block py-2 px-3 text-gray-900 rounded hover:bg-transparent md:border-0 hover:text-red-400 md:p-0"
              aria-current="page">Home</a
            >
          </li>
          <li>
            <a
              href="/nkauj"
              class="block py-2 px-3 text-gray-900 rounded hover:bg-transparent md:border-0 hover:text-red-400 md:p-0"
              >Lyrics</a
            >
          </li>
          <li>
            <a
              href="/guitar"
              class="block py-2 px-3 text-gray-900 rounded hover:bg-transparent md:border-0 hover:text-red-400 md:p-0"
              aria-current="page">Guitar</a
            >
          </li>
          <li>
            <a
              href="/paj-huam"
              class="block py-2 px-3 text-gray-900 rounded hover:bg-transparent md:border-0 hover:text-red-400 md:p-0"
              aria-current="page">Paj Huam</a
            >
          </li>
          <li>
            <a
              href="/zaj-tshoob"
              class="block py-2 px-3 text-gray-900 rounded hover:bg-transparent md:border-0 hover:text-red-400 md:p-0"
              aria-current="page">Zaj Tshoob</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

---
import { getCollection } from "astro:content";
import { dateFormat } from "../utils";
const { name, title } = Astro.props;
const { slug } = Astro.params;

const posts = (await getCollection(name)).filter(
  (post: any) => post.slug !== slug,
);
---

{
  posts.length > 0 && (
    <>
      <div class="my-4">
        <p>{title ? title :'RELATED SONG LYRICS'}</p>
      </div>
      <div class="border-b" />
      <ul class="mt-4">
        {posts.map((post: any) => (
          <li class="border-b mb-1 pb-1">
            <a href={`/${name}/${post.slug}/`} class="hover:underline">
              <h5 class="text-xl">{post.data.title}</h5>
            </a>
            <p class="text-sm mt-n4">
              <time datetime={post.data.pubDate}>
                {dateFormat(post.data.pubDate)}
              </time>
            </p>
          </li>
        ))}
      </ul>
    </>
  )
}

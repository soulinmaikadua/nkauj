---
import { type CollectionEntry, getCollection } from "astro:content";
import PajHuam from "../../layouts/PajHuam.astro";
import RelatedSong from "../../components/RelatedSong.astro";
import ServerRenderOnly from "../../components/ServerRenderOnly.astro";
export const prerender = true;
export async function getStaticPaths() {
  const posts = await getCollection("zaj-tshoob");
  return posts.map((post: any) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"zaj-tshoob">;

const post = Astro.props;
const { Content } = await post.render();
---

<PajHuam {...post.data}>
  <ServerRenderOnly data={post.data} />
  <Content />
  <RelatedSong name="zaj-tshoob" />
</PajHuam>

---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogNkauj from '../../layouts/BlogNkauj.astro';
import RelatedGuitar from '../../components/RelatedGuitar.astro';

export const prerender = true;
export async function getStaticPaths() {
	const posts = await getCollection('guitar');
	return posts.map((post:any) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'guitar'>;

const post = Astro.props;
const { Content } = await post.render();
---

<BlogNkauj {...post.data}>
	<Content />
	<RelatedGuitar name="guitar-tsom-xyooj" />
</BlogNkauj>

---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION, ARTISTS } from "../consts";
const today = new Date();
ARTISTS.sort((a: any, b: any) => {
  // Convert names to lowercase for case-insensitive sorting
  const nameA = a.name.toLowerCase();
  const nameB = b.name.toLowerCase();

  if (nameA < nameB) {
    return -1;
  }
  if (nameA > nameB) {
    return 1;
  }
  return 0;
});
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${SITE_TITLE} - Ntawv nkauj, paj huam, zaj tshoob hmoob`}
      description={SITE_DESCRIPTION}
    />
  </head>
  <body class="bg-gradient-to-r from-red-50 via-red-200 to-yellow-50">
    <Header />
    <main class="max-w-6xl mx-auto px-4 text-center">
      <h1 class="text-center my-32">🧑🏽‍💻</h1>
      <div class="my-12 text-center">
        <h1 class="text-3xl">Welcome to Nkauj.com, Hmong Song Lyrics</h1>
      </div>
      <p>Name of hmong artists</p>
      <h1 class="sr-only">Nkauj hmoob</h1>
      <h2 class="sr-only">Nkauj hmoob kho siab</h2>
      <h3 class="sr-only">Nkauj tawm tshiab {today.getFullYear()}</h3>
      <h4 class="sr-only">Nkauj hmoob toj siab</h4>
      <h5 class="sr-only">Nkauj hmoob zoo nkauj</h5>
      <h6 class="sr-only">Nkauj kho siab</h6>
      <p>🎤🪈🎸</p>
      <div class="mt-5">
        {
          ARTISTS.map((artist) => {
            return (
              <a href={`/${artist.value}`}>
                <button class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-red-200 via-red-300 to-yellow-200 group-hover:from-red-200 group-hover:via-red-300 group-hover:to-yellow-200  focus:ring-4 focus:outline-none focus:ring-red-100">
                  <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white  rounded-md group-hover:bg-opacity-0">
                    {artist.name}
                  </span>
                </button>
              </a>
            );
          })
        }
      </div>
    </main>
    <Footer />
    <script is:inline type="text/partytown">
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-K9WFSZ8");
    </script>
  </body>
</html>
